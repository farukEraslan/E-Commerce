@using E_Commerce.Web.Models.Dto.Campaign
@{
    ViewData["Title"] = "Kampanya Sayfası";
}
@model CampaignDto

<div class="container">
    <form asp-area="" asp-controller="Campaign" asp-action="Send" method="post">
        <div class="row d-flex justify-content-center">
            <div class="col-8 mb-2 mt-4">
                <div class="mb-3">
                    <label asp-for="@Model.Subject" class="form-label"><strong>Kampanya Konusu</strong></label>
                    <input type="text" class="form-control" id="subject" aria-describedby="subject" asp-for="@Model.Subject" />
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Body" class="form-label"><strong>Kampanya Metni</strong></label>
                    <textarea class="form-control" id="body" rows="5" aria-describedby="body" asp-for="@Model.Content"></textarea>
                    <span id="bodyValidation" class="form-text alert-danger" asp-validation-for="@Model.Content"></span>
                </div>
            </div>
        </div>
        <div class="d-grid gap-2 col-3 mx-auto mb-3">
            <button type="submit" class="btn btn-primary">Gönder</button>
        </div>
    </form>
</div>

@section Scripts {

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}