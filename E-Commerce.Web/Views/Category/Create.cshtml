@using E_Commerce.Web.Models.Dto.Category
@{
    ViewData["Title"] = "Kategori Ekle";
}
@model CategoryDto

<div class="container">
    <form asp-area="" asp-controller="Category" asp-action="Create" method="post">
        <div class="row d-flex justify-content-center">
            <div class="col-6 mb-2 mt-4">
                <div class="mb-3">
                    <label asp-for="@Model.CategoryName" class="form-label"><strong>Kategori Adı</strong></label>
                    <input type="text" class="form-control" id="categoryName" aria-describedby="categoryName" asp-for="@Model.CategoryName">
                    <span id="categoryValidation" class="form-text alert-danger" asp-validation-for="@Model.CategoryName"></span>
                </div>
            </div>
        </div>
        <div class="d-grid gap-2 col-3 mx-auto mb-3">
            <button type="submit" class="btn btn-primary">Kategori Ekle</button>
        </div>
    </form>
</div>

@section Scripts {

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}