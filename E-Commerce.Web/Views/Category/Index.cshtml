@using E_Commerce.Web.Models.Dto.Category
@{
    ViewData["Title"] = "Kategoriler";
}
@model List<CategoryDto>

<div class="container">
    <h1>Kitap Listesi</h1>
    <hr />
    @if (Model.Count == 0)
    {
        <div class="row justify-content-end">
            <a class="btn btn-success" type="button" style="width:100px;;" href="category/create">Oluştur</a>
        </div>
        <div class="d-flex justify-content-center">
            <h4 class="align-middle">Listelenecek kategori bulunamadı.</h4>
        </div>
    }
    else
    {
        <div class="row justify-content-end">
            <a class="btn btn-success" type="button" style="width:100px;;" href="category/create">Oluştur</a>
        </div>
        <div class="row">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th class="align-middle" style="width:70%;">Kategori Adı</th>
                        <th class="align-middle" style="width:30%;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td class="align-middle">@category.CategoryName</td>
                            <td class="align-middle">
                                <div class="d-grid gap-2 d-md-block">
                                    <a class="btn btn-warning" type="button" style="width:100px;" asp-area="" asp-controller="Category" asp-action="Update" asp-route-id="@category.Id">Düzenle</a>
                                    <a class="btn btn-danger" type="button" style="width:100px;" asp-area="" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">Sil</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <nav aria-label="Page navigation example">
                <ul class="pagination" id="pagination">
                    @*<li class="page-item"><a class="page-link" href="#">Previous</a></li>*@
                    <li class="page-item"><a class="page-link" asp-controller="Category" asp-action="Index" asp-route-page="1" asp-route-size="8">1</a></li>
                    <li class="page-item"><a class="page-link" asp-controller="Category" asp-action="Index" asp-route-page="2" asp-route-size="8">2</a></li>
                    <li class="page-item"><a class="page-link" asp-controller="Category" asp-action="Index" asp-route-page="3" asp-route-size="8">3</a></li>
                    @*<li class="page-item"><a class="page-link" href="#k">Next</a></li>*@
                </ul>
            </nav>
        </div>
    }
</div>