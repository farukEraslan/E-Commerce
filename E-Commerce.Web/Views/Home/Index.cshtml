@using E_Commerce.Web.Models.Dto.Product
@{
    ViewData["Title"] = "Anasayfa";
}

@model List<ProductDto>

<h1>Anasayfa</h1>
<div class="container">
    <div class="row justify-content-center">
        @foreach (var product in Model)
        {
            <div class="card m-2" style="width: 18rem;">
                <img class="card-img-top mt-3" style="height: 150px;" src="@product.ImageUrl" alt="@product.ProductName">
                <div class="card-body">
                    <h5 class="card-title">@product.ProductName</h5>
                    <small class="text-secondary">@product.CategoryName</small>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"> Yazar : @product.Author</li>
                    <li class="list-group-item">Yayınevi : @product.Publisher</li>
                </ul>
                <div class="card-body d-flex justify-content-between">
                    <span class="align-middle mt-2">Stok : @product.StockAmount Adet</span>
                    @if (product.StockAmount > 0)
                    {
                        <a class="btn btn-primary" id="AddtoCart" asp-Controller="Order" asp-action="AddToCartOnHomePage" asp-route-productId="@product.Id">Sepete Ekle</a>
                    }
                    else
                    {
                        <a class="btn btn-primary disabled" id="AddtoCart" asp-Controller="Order" asp-action="AddToCartOnHomePage" asp-route-productId="@product.Id">Sepete Ekle</a>
                    }
                </div>
            </div>
        }
    </div>
    <nav id="paginationNavbar" class="mt-4">
        <ul class="pagination justify-content-center">
            @*<li class="page-item"><a class="page-link" href="#">Previous</a></li>*@
            <li class="page-item"><a class="page-link" asp-controller="Home" asp-action="Index" asp-route-page="1" asp-route-size="8">1</a></li>
            <li class="page-item"><a class="page-link" asp-controller="Home" asp-action="Index" asp-route-page="2" asp-route-size="8">2</a></li>
            <li class="page-item"><a class="page-link" asp-controller="Home" asp-action="Index" asp-route-page="3" asp-route-size="8">3</a></li>
            @*<li class="page-item"><a class="page-link" href="#k">Next</a></li>*@
        </ul>
    </nav>
</div>