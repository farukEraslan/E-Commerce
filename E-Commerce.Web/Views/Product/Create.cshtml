@using E_Commerce.Web.Models.Dto.Product
@{
    ViewData["Title"] = "Kitap Ekle";
}
@model ProductCreateVM

<form asp-area="" asp-controller="Product" asp-action="Create">
    <div class="mb-3">
        <label asp-for="@Model.ProductCreateDto.ProductName" class="form-label">Kitap Adı</label>
        <input type="text" class="form-control" id="productName" aria-describedby="productName" asp-for="@Model.ProductCreateDto.ProductName">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.CategoryDto" class="form-label">Kategori</label>
        <select>
            @foreach (var category in Model.CategoryDto)
            {
                <option>@category.CategoryName</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.ProductCreateDto.UnitPrice" class="form-label">Birim Fiyat</label>
        <input type="number" min="1.00" max="1000.00" step="0.01" class="form-control" id="unitPrice" aria-describedby="unitPrice" asp-for="@Model.ProductCreateDto.UnitPrice">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.ProductCreateDto.StockAmount" class="form-label">Stok Adedi</label>
        <input type="number" min="1.00" max="1000.00" step="1" class="form-control" id="stockAmount" aria-describedby="stockAmount" asp-for="@Model.ProductCreateDto.StockAmount">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.ProductCreateDto.Author" class="form-label">Yazar Adı</label>
        <input type="text" class="form-control" id="author" aria-describedby="author" asp-for="@Model.ProductCreateDto.Author">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.ProductCreateDto.Publisher" class="form-label">Yayınevi</label>
        <input type="text" class="form-control" id="publisher" aria-describedby="publisher" asp-for="@Model.ProductCreateDto.Publisher">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.ProductCreateDto.ISBN" class="form-label">ISBN Numarası</label>
        <input type="text" class="form-control" id="isbn" aria-describedby="isbn" asp-for="@Model.ProductCreateDto.ISBN">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.ProductCreateDto.ImageUrl" class="form-label">Kapak Fotoğrafı</label>
        <input type="file" class="form-control" id="imageUrl" aria-describedby="imageUrl" asp-for="@Model.ProductCreateDto.ImageUrl">
    </div>
    <button type="submit" class="btn btn-primary">Kitap Ekle</button>
</form>